YACC program which accept strings that starts and ends with 0 or 1

lex program - 

%{
#include<stdio.h>
#include<stdlib.h>
#include"01.tab.h"
extern int yylval;
%}

%%
[0] {yylval = 0; return ZERO;}
[1] {yylval = 1; return ONE;}
[.|\n] {yylval = 2; return 0;}
%%

int yywrap()
{
	return 1;
}

Yacc program - 

%{
#include<stdio.h>
#include <stdlib.h>
void yyerror(const char *str)
{
printf("\nSequence Rejected\n");		
}
%}

%token ZERO ONE

%%

r : s {printf("\nSequence Accepted\n\n");}
;
s : n
| ZERO a
| ONE b
;
a : n a
| ZERO
;
b : n b
| ONE
;
n : ZERO
| ONE
;
%%

int main()
{
	printf("\nEnter Sequence of Zeros and Ones : ");
	yyparse();
	printf("\n");
	return 0;
}
